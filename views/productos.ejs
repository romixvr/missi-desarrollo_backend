<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Tienda Online App</title>
    <!--Bootstrap CSS-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <link rel="stylesheet" href="css/style.css">
</head>
  <body>
    <div class="container">
        <div class="shadow-lg pb-3 mb-5 bg-body rounded">
            <h4>Datos del producto</h4>
            <form action="/crear" method="POST">
                <div>
                    <label for="nombre" class="form-label">Nombre</label>
                    <input id="nombre" name="nombre" type="text" class="form-control" required>
                </div>
                <div>
                    <label for="precio" class="form-label">Precio</label>
                    <input id="precio" name="precio" type="number" class="form-control" required>
                </div>
                <div>
                    <label for="stock" class="form-label">Stock</label>
                    <input id="stock" name="stock" type="number" class="form-control" required>
                </div>
                <div>
                    <label for="categoria" class="form-label">categoria</label>
                    <input id="categoria" name="categoria" type="text" class="form-control" required>
                </div>
                <button type="submit" class="w-100 btn btn-guardar btn-lg"> <i class="bi bi-save"></i> Registrar Producto </button>
            </form>

            <table id=""tablaProductos class="table mt-6">
                <thead>
                    <tr>
                        <th style="display: none;" >ID</th>
                        <th>Nombre</th>
                        <th>Precio</th>
                        <th>Stock</th>
                        <th>Categoria</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% productos.forEach( (producto)=> { %>
                    <tr>
                        <td style="display: none;"><%=producto._id %></td>
                        <td><%=producto.nombre %></td>
                        <td><%=producto.precio %></td>
                        <td><%=producto.stock %></td>
                        <td><%=producto.categoria %></td>
                        <td>
                            <a type="button" class="btnEditar btn btn-outline-primary bi bi-pencil" > </a>
                            <a href="/borrar/<%=producto._id %>" class="btn btn-outline-danger bi bi-trash"></a>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>

        </div> 
    </div>
  <!-- modal para editar productos-->
  <div id="modalProductos" class="modal fade" tabindex="-1" aria-labelledby="modalProductos" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="ejemplo"> Editar producto</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="close"></button>
            </div>
            <div class="modal-body">
                <form action="/editar" method="POST">
                    <input name="id_editar" id="id_editar" type="text"  hidden>
                    <div class="mb-4">
                        <label for="nombre_editar" class="col-form-label">Nombre:</label>
                        <input id="nombre_editar" name="nombre_editar" type="text" class="form-control" value="">
                    </div>
                    <div class="mb-4">
                        <label for="precio_editar" class="col-form-label">Precio:</label>
                        <input id="precio_editar" name="precio_editar" type="number" class="form-control" value="">
                    </div>
                    <div class="mb-4">
                        <label for="stock_editar" class="col-form-label">Stock:</label>
                        <input id="stock_editar" name="stock_editar" type="number" class="form-control" value="">
                    </div>
                    <div class="mb-4">
                        <label for="categoria_editar" class="col-form-label">Categoria:</label>
                        <input id="categoria_editar" name="categoria_editar" type="text" class="form-control" value="">
                    </div>
                    <div class="modal-footer">
                        <button  type="submit" class="btn btn-primary" >Actualizar</button>

                    </div>
                </form>

            </div>
        </div>

    </div>

  </div>
  <script src="js/code.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>